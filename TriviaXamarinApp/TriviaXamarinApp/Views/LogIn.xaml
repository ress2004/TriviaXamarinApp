<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaXamarinApp.Views.LogIn">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="CenterAndExpand">
            <Label Text="LogIn "/>
            <Entry Placeholder="Enter Email: " Text="{Binding Email}"></Entry>
            <Entry Placeholder="Enter Password: " Text="{Binding Password}"></Entry>
            <Button Text="Login" Command="{Binding LogInCommand}" ></Button>
            <Label Text="{Binding Error}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>